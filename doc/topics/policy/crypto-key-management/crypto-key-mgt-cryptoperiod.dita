                    <colspec colname="c3" colnum="3" colwidth="1*"/>
                    <thead>
                        <row>
                            <entry>State</entry>
                            <entry>Usage</entry>
                            <entry>Cryptoperiod</entry>
                        </row>
                    </thead>
                    <tbody>
                        <row>
                            <entry>active</entry>
                            <entry>encrypt and decrypt data</entry>
                            <entry>1.5 years</entry>
                        </row>
                        <row>
                            <entry>decrypt-only</entry>
                            <entry>decrypt data</entry>
                            <entry>1.5 years</entry>
                        </row>
                        <row>
                            <entry>retired</entry>
